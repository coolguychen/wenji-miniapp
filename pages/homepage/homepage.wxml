<!--pages/demo01/demo01.wxml-->

<view class='page_row' bindtap="suo">
    <view class="search" bindtap='search'>
      <view class="df search_arr">
        <icon class="searchcion" size='16' type='search'></icon>
        <input class="sousuo" disabled placeholder="搜索" />
      </view>
    </view>
</view>

<view class="map-view"> 
  <map id="map"
  style="width: 100%; height: 100vh;"
  longitude="{{longitude}}" 
  latitude="{{latitude}}"
  show-location="true"
  markers="{{markers}}"
  controls="{{controls}}"
  bindcontroltap="moveTolocation" 
  bindmarkertap="toInformation"
  >
  </map>
 
</view>
