/* pages/footprint/footprint.wxss */
.footprint {
  height: 100%;
}

/*外部容器*/
.listview-container {
  margin: 10rpx 10rpx;
  margin-bottom: 115rpx;
}
  
/*行样式*/
.playlog-item {
  display: flex;
}
  
/*时间轴*/
.playlog-item .dotline {
  width: 35px;
  position: relative;
}
  
/*竖线*/
.playlog-item .dotline .line {
  width: 1px;
  height: 100%;
  background: #f1ecea;
  position: absolute;
  top: 0;
  left: 15px; 
}

.playlog-item .dotline .dot .dot-image {
  width: 36px;
  height: 38px; 
  position: absolute; 
  /* background: #ffffff; */
  top: 10px; 
}
  
/*时间戳*/
.playlog-item .dotline .time {
  width: 100%;
  position: absolute;
  margin-top: 30px;
  z-index: 99;
  font-size: 14px;
  color:  #f1ecea;
  text-align: center;
}
  
/*右侧主体内容*/
.playlog-item .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #f1ecea;
  margin-left: 10px;
  /* margin: 5px  0; */
}

.playlog-item .content .information {
  display: flex;
  flex-direction: row;
}
  
/*标记想去的时间*/
.playlog-item .content .time {
  font-size: 30rpx;
  line-height: 56rpx;
  color: rgb(121, 121, 121);
}

/*想去的地点名*/
.playlog-item .content .location {
  font-size: 36rpx;
  line-height: 68rpx;
  color: #444;
  white-space: normal;
  padding-right: 10px;
  margin-top: 5rpx;
  /* margin-bottom: 5rpx; */
}
  
/*留下的评价*/
.playlog-item .content .visibility {
  width: 18px;
  height: 18px; 
  position: absolute; 
  margin-top: 10rpx;
  margin-left: 400rpx;
}

/*留下的评价*/
.playlog-item .content .comment {
  font-size: 32rpx;
  line-height: 56rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  color: rgb(121, 121, 121);
}

/* 评分部分样式 */
.stars {
  display: flex;
  margin-bottom: 5rpx;
}

.star {
  position: relative;
  width: 45rpx;
  height: 45rpx;
  /* margin-right: 10rpx; */
}

/* 黄色星星 */
.star view.icon_yellow {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99;
  height: 50rpx;
  overflow: hidden;
}

/* 灰色星星背景 */
.star view.icon_gray {
  position: absolute;
  left: 0;
  top: 0;
  width: 50rpx;
  height: 50rpx;
}

.star view image {
  width: 45rpx;
  height: 45rpx;
  display: block;
}

/*评论图片样式*/
.img_box {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  flex-direction: row;
}

.imgs {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  flex-direction: row;
}

.imgs image {
  flex-direction: column;
  margin: 0.1rem;
  background: white;
  width: 5.4rem;
  height: 5.4rem;
}
