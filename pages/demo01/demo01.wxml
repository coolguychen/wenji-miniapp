<!--pages/search/search.wxml-->

<view class="search-wrapper">
  <view class='search'>
    <input type='text' 
          placeholder='请输入您要搜索的内容'
          bindinput='input' 
          bindconfirm='confirm'/>
    <icon type='search' class='icons'></icon>
    <view wx:for="{{list}}"  wx:key='' class='lists'>
      <text wx:if="{{item.show}}">{{item.name}}</text>
    </view>
  </view>
</view>

<view class="map-view"> 
  <map id="map"
  style="width: 100%; height: 100vh;"
  longitude="{{longitude}}" 
  latitude="{{latitude}}"
  show-location="true"
  markers="{{markers}}"
  controls="{{controls}}"
  bindcontroltap="moveTolocation" 
  bindmarkertap="toInformation"
  >
  </map>
 
</view>
